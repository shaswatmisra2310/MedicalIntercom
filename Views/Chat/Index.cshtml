
<html>
    <head>
    <meta charset="utf-8">
    <script src="https://kit.fontawesome.com/b99e675b6e.js"></script>
</head>
    <body>
        <form>
        <button id="newchat-button" asp-controller="Chat" asp-action="CreateNewChat" >create new chat</button>
        </form>
        @using (Html.BeginForm("GetMessages","Chat"))
        {
        @foreach(CurrentUserThreads thread in ViewBag.threads)     @*as ICollection<CurrentUserThreads>*@
    {
        <input type="hidden" name="chatthreadid" value="@thread.ChatThreadIds"> 
        <input type="hidden" name="chatclient" value="@thread.chatClient"> 
        <input type="submit" value="@thread.ChatTopics">  @* <input type="submit" asp-controller="Chat" asp-action="DeleteChatThread" asp-route="@thread.ChatThreadIds" value="delete">*@  <br />
    }
        }
    
</body>
</html>