@model MedicalIntercomProject.Models.NewUserViewModel
<p>This is user creation page</p>
<br />
<p>fill details below</p>
<br />
<div class="row">
    <div class="col-md-4">
        <form asp-action="CreateNewUser" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label for="username" value="username" class="control-label">username:</label>
                <input type="text" id="username" class="form-control" />
                
            </div>
            <div class="form-group">
                <label for="firstname" value="firstname" class="control-label">firstname:</label>
                <input type="text" id="firstname" class="form-control" />
                
            </div>
            <div class="form-group">
                <label for="lastname" value="lastname" class="control-label">lastname:</label>
                <input type="text" id="lastname" class="form-control" />
                
            </div>

            <div class="form-group">
                <label for="password" value="password" class="control-label">password:</label>
                <input type="password" id="password" class="form-control" />
               
            </div>
            <div class="form-group">
                <!--change from radio buttons to Admin UX-->
                <input type="radio" id="Admin" name="Role" value="Admin" />
                <label for="Admin">Admin</label>
                <input type="radio" id="User" name="Role" value="User" />
                <label for="User">User</label>
                <br />
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


